# Postgres
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=money_flow
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Rust / sqlx
DATABASE_URL=postgres://app:app@postgres:5432/money_flow

# App
HOST=0.0.0.0
PORT=9999

# Asset Versioning (for cache busting)
# Increment ASSETS_VERSION when CSS/JS files change
# Increment IMAGES_ASSETS_VERSION when images/media files change
ASSETS_VERSION=1.0.0
IMAGES_ASSETS_VERSION=1.0.0

# Optional
RUST_LOG=debug

# SQLx offline mode
SQLX_OFFLINE=true

# JWT
EXPIRATION_TIME=2 # in minutes
JWT_SECRET=your_jwt_secret_key

# Cron Jobs
USER_COUNTER=0 * * * * *

# RabbitMQ (synced from main docker .env on container startup)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=app
RABBITMQ_PASSWORD=rabbitmq_secret_password
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://app:rabbitmq_secret_password@rabbitmq:5672/%2F

# Redis (synced from main docker .env on container startup)
REDIS_IP=172.28.0.13
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USER=app
REDIS_PASSWORD=redis_secret_password
REDIS_DB=0
REDIS_URL=redis://app:redis_secret_password@redis:6379/0

POSTGRES_IP=172.28.0.11

# Email (Mailtrap)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=7b399a1dbd258e
MAIL_PASSWORD=c28c49db891124
MAIL_FROM_ADDRESS=noreply@moneyflow.app
MAIL_FROM_NAME=MoneyFlow

# Activation Hash Expiry Times (in minutes)
EXPIRY_ACCOUNT_ACTIVATION=60
EXPIRY_FORGOT_PASSWORD=60
EXPIRY_USER_MUST_SET_PASSWORD=1440
EXPIRY_PASSWORD_CHANGE=15

# Kafka (synced from main docker .env on container startup)
KAFKA_HOST=kafka
KAFKA_PORT=9092
KAFKA_BROKERS=kafka:9092

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=104857600
UPLOAD_MAX_FILES=10
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,svg,ico,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv,zip,rar,7z,tar,gz
UPLOAD_STORAGE_PATH=storage/app

# Storage Driver (local or s3)
STORAGE_DRIVER=local
STORAGE_PUBLIC_URL=/storage
STORAGE_PRIVATE_URL=/api/v1/upload/private

# S3 Configuration (only needed if STORAGE_DRIVER=s3)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_PUBLIC_URL=https://your-bucket.s3.amazonaws.com
